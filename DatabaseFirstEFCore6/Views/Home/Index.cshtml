@model IEnumerable<DatabaseFirstEFCore6.Models.Student>

@{
    ViewData["Title"] = "Index";
}

@{
    if (TempData["Success"] != null)
    {
        <script>
            iziToast.success({
            id: 'success',
            title: 'Success',
            message: '@TempData["Success"]',
            position: 'bottomRight',
            transitionIn: 'bounceInLeft'
            });
        </script>
    }
    else if (TempData["Updated"] != null)
    {
        <script>
            iziToast.success({
                id: 'success',
                title: 'Updated',
                titleColor: 'white',
                messageColor: 'white',
                backgroundColor: 'green',
                message: '@TempData["Updated"]',
                position: 'topLeft',
                transitionIn: 'bounceInLeft'
            });
        </script>
    } 
    else if (TempData["Delete"] != null)
    {
        <script>
            iziToast.success({
                id: 'success',
                title: 'Deleted',
                titleColor: 'white',
                messageColor: 'white',
                backgroundColor: 'red',
                message: '@TempData["Delete"]',
                position: 'topRight',
                transitionIn: 'bounceInLeft'
            });
        </script>
    
    }

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standard)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Standard)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
